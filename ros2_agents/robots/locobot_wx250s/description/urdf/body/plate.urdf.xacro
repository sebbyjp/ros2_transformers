<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="plate" params="*origin *inertial">

    <joint name="plate" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent
        link="${robot_name}_base_link"/>
      <child
        link="${robot_name}_plate_link"/>
    </joint>

    <link name="${robot_name}_plate_link">
      <visual>
        <origin
          rpy="0 0 0"
          xyz="0 0 0"/>
        <geometry>
          <mesh
            filename="package://ros2_agents/robots/locobot_wx250s/description/meshes/base/locobot_base_plate.stl"
            scale="${mesh_scale}"/>
        </geometry>
        <material name="interbotix_black"/>
      </visual>
      <collision>
        <origin
          rpy="0 0 0"
          xyz="0 0 0"/>
        <geometry>
          <mesh
            filename="package://ros2_agents/robots/locobot_wx250s/description/meshes/base/locobot_base_plate.stl"
            scale="${mesh_scale}"/>
        </geometry>
      </collision>
      <xacro:insert_block name="inertial"/>
    </link>

    <gazebo reference="${robot_name}_plate_link">
      <material>Gazebo/DarkGrey</material>
    </gazebo>

    <gazebo reference="plate">
      <disableFixedJointLumping>true</disableFixedJointLumping>
    </gazebo>

  </xacro:macro>

</robot>
