    <visual>
      <material>
        <xacro:include filename="$(find ros2_agents)/sim/object_descriptions/urdf/colors.urdf.xacro" />
        <xacro:color color="$(arg color)" />
      </material>
      <!-- <origin xyz="$(arg x) $(arg y) $(arg z)" /> -->
